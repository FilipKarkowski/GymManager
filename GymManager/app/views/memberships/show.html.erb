<p class="text-success"><%= notice %></p>

<div class="card">
  <div class="card-body">
    <h5 class="card-title">Informacje o karnecie</h5>
    <p class="card-text"><strong>ID użytkownika:</strong> <%= @membership.user_id %></p>
    <p class="card-text"><strong>Data rozpoczęcia:</strong> <%= @membership.start_date %></p>
    <p class="card-text"><strong>Data zakończenia:</strong> <%= @membership.end_date %></p>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edytuj", edit_membership_path(@membership), class: "btn btn-primary mr-2" %>
  <%= button_to "Usuń", @membership, method: :delete, data: { confirm: "Czy na pewno chcesz usunąć ten karnet?" }, class: "btn btn-danger mr-2" %>
  <%= link_to "Powrót", memberships_path, class: "btn btn-secondary" %>
</div>
