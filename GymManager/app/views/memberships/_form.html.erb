<%= form_with(model: @membership, local: true) do |form| %>
  <% if @membership.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@membership.errors.count, "błąd") %> uniemożliwiło zapisanie tej subskrypcji:</h2>

      <ul>
        <% @membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: "Wybierz użytkownika" %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date, value: Date.today, readonly: true %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date, id: "end_date_field" %>
    <div>
      <% [30, 60, 90, 365].each do |days| %>
        <%= button_tag "#{days} dni", type: "button", class: "btn btn-primary", data: { days: days } %>
      <% end %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const endDateField = document.getElementById("end_date_field");

        // Dodaj obsługę dla przycisków dni
        document.querySelectorAll("[data-days]").forEach(function(button) {
            button.addEventListener("click", function() {
                const days = parseInt(this.dataset.days);
                const endDate = new Date();
                endDate.setDate(endDate.getDate() + days);
                const formattedEndDate = endDate.toISOString().split('T')[0];
                endDateField.value = formattedEndDate;
            });
        });
    });
</script>
