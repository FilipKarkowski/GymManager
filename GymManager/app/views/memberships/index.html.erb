<p class="text-success"><%= notice %></p>

<h1>Memberships</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>User ID</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th colspan="3">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @memberships.each do |membership| %>
    <tr>
      <td><%= membership.user_id %></td>
      <td><%= membership.start_date %></td>
      <td><%= membership.end_date %></td>
      <td><%= link_to "Show", membership, class: "btn btn-info btn-sm" %></td>
      <td><%= link_to "Edit", edit_membership_path(membership), class: "btn btn-primary btn-sm" %></td>
      <td><%= button_to "Destroy", membership, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div class="mt-3">
  <%= link_to "New membership", new_membership_path, class: "btn btn-success" %>
</div>
