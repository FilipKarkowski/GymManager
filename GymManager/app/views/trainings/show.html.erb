<div class="max-w-md mx-auto p-4 bg-white shadow-md rounded-md">
  <p class="text-lg font-semibold"><strong>Nazwa:</strong> <%= @training.name %></p>
  <div class="mt-2">
    <strong>Opis:</strong>
    <%= simple_format(@training.description) %>
  </div>
</div>

<div class="mt-4 flex justify-center">
  <%= link_to "Edytuj ten trening", edit_training_path(@training), class: "mr-4 py-2 px-4 bg-blue-500 text-white rounded-md hover:bg-blue-600" %>
  <%= link_to "Powrót do treningów", trainings_path, class: "py-2 px-4 bg-gray-400 text-white rounded-md hover:bg-gray-500" %>
</div>

<div class="mt-4 flex justify-center">
  <%= button_to "Usuń ten trening", @training, method: :delete, data: { confirm: "Czy na pewno chcesz usunąć ten trening?" }, class: "py-2 px-4 bg-red-500 text-white rounded-md hover:bg-red-600" %>
</div>
