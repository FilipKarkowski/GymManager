<!-- app/views/pages/home.html.erb -->
<h1 class="text-2xl font-bold mb-4">Plan treningowy na bieżący tydzień</h1>

<div class="overflow-x-auto">
  <table class="table-auto w-full border-collapse">
    <thead>
    <tr>
      <th class="px-4 py-2 bg-gray-200 text-gray-800 border border-gray-300">Dzień</th>
      <th class="px-4 py-2 bg-gray-200 text-gray-800 border border-gray-300">Godzina</th>
      <th class="px-4 py-2 bg-gray-200 text-gray-800 border border-gray-300">Trening</th>
    </tr>
    </thead>
    <tbody>
    <% @days.each do |day| %>
      <% @trainings_by_day[day].each do |schedule| %>
        <tr>
          <td class="px-4 py-2 border border-gray-300"><%= day.strftime("%A") %></td>
          <td class="px-4 py-2 border border-gray-300"><%= schedule.time.strftime("%H:%M") %></td>
          <td class="px-4 py-2 border border-gray-300"><%= schedule.training.name %></td>
        </tr>
      <% end %>
    <% end %>
    </tbody>
  </table>
</div>
